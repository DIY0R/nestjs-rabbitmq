{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: version v${version}"
  },
  "npm":{
    "release": true
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init":["git pull","npm run build"],
    "after:bump":"npx auto-changelog -p"
  }
}
