{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "rmq-nestjs": {
      "type": "library",
      "root": "libs/rmq-nestjs",
      "entryFile": "index",
      "sourceRoot": "libs/rmq-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/rmq-nestjs/tsconfig.lib.json"
      }
    }
  }
}